apiVersion: apps/v1
kind: Deployment
metadata:
  name: cpu-hog
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cpu-hog
  template:
    metadata:
      labels:
        app: cpu-hog
    spec:
      containers:
      - name: cpu-hog
        # image: vish/stress
        image: desperex/stress  # this image is just the arm64 version of vish/stress
        args: ["--cpus", "16"]
        resources:
          limits:
            cpu: "50m"  # Limit the CPU to half of a single core
          requests:
            cpu: "50m"  # Request a quarter of a single core
